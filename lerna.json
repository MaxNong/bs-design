{
  "version": "independent",
  "npmClient": "yarn",
  "command": {
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"],
      "registry": "https://registry.npmjs.org"
    },
    "bootstrap": {
      "npmClientArgs": [ "--no-package-lock" ]
    }
  },
  "useWorkspaces": true,
  "packages": [
    "packages/core/*"
  ]
}
